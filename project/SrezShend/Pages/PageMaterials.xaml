<Page x:Class="SrezShend.Pages.PageMaterials"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SrezShend.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMaterials">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60px"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="0" 
                    HorizontalAlignment="Stretch">

            <TextBox  Name="tbFind"     
                      TextChanged="tbFind_TextChanged"           
                      Width="200"/>
            <ComboBox Name="cbSort"     
                      SelectionChanged="cbSort_SelectionChanged" 
                      Width="200"/>
            <ComboBox Name="cbFilter"   
                      SelectionChanged="cbFilter_SelectionChanged" 
                      Width="200"/>
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Orientation="Horizontal">
                <TextBlock Text="Записей: "/>
                <TextBlock x:Name="tbCount" Text="0"/>
                <TextBlock Text=". Всего: "/>
                <TextBlock x:Name="tbCountAll" Text="0"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Stretch">

            <Button x:Name="AddMat"  
                    Content="Добавить" 
                    Click="AddMat_Click" 
                    Width="174" 
                    Background="#FFA5E887"/>
            <Button x:Name="EditMat" 
                    Content="Изменить" 
                    Click="EditMat_Click" 
                    Width="174" 
                    Background="#FFA5E887"/>
            <Button x:Name="DelMat" 
                    Content="Удалить" 
                    Click="DelMat_Click" 
                    Width="174" 
                    Background="#FFA5E887"/>

        </StackPanel>
        <ListBox x:Name="lbMat" 
                 Grid.Row="1" 
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="BorderBrush" 
                            Value="#999"/>
                    <Setter Property="BorderThickness" 
                            Value="2"/>
                    <Setter Property="Margin" 
                            Value="5"/>
                    <Setter Property="FontSize" Value="18" />
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" 
                                    Value="5"/>
                        </Style>
                    </Style.Resources>
                </Style>

            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120px"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200px"/>
                        </Grid.ColumnDefinitions>

                        <Border CornerRadius="5,5,5,5" 
                                Grid.Column="0" 
                                Grid.RowSpan="3" 
                                Margin="5" >
                            <Border.Background>
                                <ImageBrush Stretch="UniformToFill" 
                                            ImageSource="{Binding Image}" />
                            </Border.Background>
                        </Border>


                        <StackPanel Orientation="Vertical" 
                                    Grid.Column="1">

                            <TextBlock Margin="3">
                            <Run Text="{Binding MaterialType.Title}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding Title}"/>
                            </TextBlock>

                            <TextBlock  Margin="3">
                            <Run Text="Минимальное количество: "/>
                            <Run Text="{Binding MinCount}"/>
                            </TextBlock>

                            <TextBlock  Margin="3">
                            <Run Text="Поставщики: "/>
                            <Run Text="{Binding MaterialSupplier.SupplierId.Title}"/>
                            </TextBlock>

                        </StackPanel>
                        <StackPanel Grid.RowSpan="3" 
                                    Grid.Column="2" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center" >

                            <TextBlock  Margin="3" >
                            <Run FontWeight="Bold" 
                                 Text="Остаток: "/>
                            <Run Text="{Binding CountInStock}"/>
                            </TextBlock>

                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
